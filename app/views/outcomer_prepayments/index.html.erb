<div class="container my-5">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title font-weight-bold">Предоплаты</h3>
      <%= link_to 'Добавить новый', new_outcomer_prepayment_path, class: 'btn btn-primary' %>
    </div>
    <div class="card-body">
      <% if @outcomer_prepayments.any? -%>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Поставщик</th>
              <th>Цена</th>
              <th>Исполнитель</th>
              <th>Дата</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @outcomer_prepayments.each do |outcomer_prepayment| -%>
              <tr>
                <td><%= outcomer_prepayment.id %></td>
                <td><%= outcomer_prepayment.outcomer.name %></td>
                <td><%= num_to_usd outcomer_prepayment.price %></td>
                <td><%= outcomer_prepayment.user.name %></td>
                <td><%= outcomer_prepayment.created_at.strftime('%Y-%m-%d %H:%M') %></td>
                <td>
                  <%= clink_to 'редактировать', edit_outcomer_prepayment_path(outcomer_prepayment), 'fa-edit' %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
        <%= paginate @outcomer_prepayments %>
      <% else -%>
        <p class="text-center">пусто</p>
      <% end -%>
    </div>
  </div>
</div>
